@model IEnumerable<Ecommerces_asp.net.Areas.Admin.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout1";
}
<a style="padding-top:100px" class="btn btn-warning" asp-action="Create">Create</a>
<div class="bs-example widget-shadow" data-example-id="bordered-table">
    <h4>Product:</h4>
    <table class="table table-bordered">
        <thead>
            <tr>

                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.UnitBrief)</th>
                <th> @Html.DisplayNameFor(model => model.UnitPrice)</th>
                <th> @Html.DisplayNameFor(model => model.Image)</th>
                <th> @Html.DisplayNameFor(model => model.ProductDate)</th>
                <th>@Html.DisplayNameFor(model => model.Available)</th>
                <th> @Html.DisplayNameFor(model => model.Description)</th>
                <th> @Html.DisplayNameFor(model => model.Quantity)</th>
                <th> @Html.DisplayNameFor(model => model.Discount)</th>
                <th> @Html.DisplayNameFor(model => model.Special)</th>
                <th>  @Html.DisplayNameFor(model => model.Latest)</th>
                <th>  @Html.DisplayNameFor(model => model.Views)</th>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <th>   @Html.DisplayNameFor(model => model.Supplier)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitBrief)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td>
                        <img class="img-responsive" src="@Url.Content("~/Admin/images/" + @item.Image)" alt="">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Available)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Special)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Latest)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Views)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Supplier.Id)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
